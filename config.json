{
    "debug_mode": 11,
    "dry_run": false,
    "target_path": "d:\\wamp\\www\\netopes\\web\\",
    "target_dirs": [
        "application",
        "public_html"
    ], 
    "file_types": [
        ".php",
        ".phtml"
    ],
    "exceptions": {
        "directories": [
            ".cache",
            ".logs",
            "Configs",
            "repository",
            "tmp",
            "vendor",
            "lib",
            "resources",
            "css",
            "js",
            "images"
        ],    
        "files": [
        ]
    },
    "tasks": [
        {
            "module": "ajax_request_replacer",
            "rules": [
                {
                    "method": "command_string",
                    "regex": "(?m)'command_string'=>\\\"AjaxRequest\\((?:[\\s\\S]*?)\\)->.*\\\",\\s*$",
                    "params": { "prefix_length": 31 }
                },
                {
                    "method": "onclick_str",
                    "regex": "(?m)'onclick_str'=>\\\"AjaxRequest\\((?:[\\s\\S]*?)\\)->.*\\\",\\s*$",
                    "params": { "prefix_length": 28 }
                },
                {
                    "method": "tab_ajax_content",
                    "regex": "(?m)'content'=>\\\"AjaxRequest\\((?:[\\s\\S]*?)\\)->.*\\\",\\s*$",
                    "params": { "prefix_length": 24 }
                },
                {
                    "method": "legacy_execute",
                    "regex": "(?m)NApp::Ajax\\(\\)->LegacyExecute\\(\\s*?\\\"AjaxRequest\\((?:[\\s\\S]*?)\\)->.*\\\"\\);\\s*$",
                    "params": { "prefix_length": 28 }
                },
                {
                    "method": "action_legacy_prepare",
                    "regex": "(?m)'onclick'=>NApp::Ajax\\(\\)->LegacyPrepare\\(\\s*?\\\"AjaxRequest\\((?:[\\s\\S]*?)\\)->.*\\\"\\),\\s*$",
                    "params": { "prefix_length": 39, "action": "onclick", "end_char": "," }
                },
                {
                    "method": "action_legacy_prepare",
                    "regex": "(?m)'onclick'=>NApp::Ajax\\(\\)->LegacyPrepare\\(\\s*?\\\"AjaxRequest\\((?:[\\s\\S]*?)\\)->.*\\\"\\)\\]\\s*$",
                    "params": { "prefix_length": 39, "action": "onclick", "end_char": "]" }
                },
                {
                    "method": "action_legacy_prepare",
                    "regex": "(?m)'onchange'=>NApp::Ajax\\(\\)->LegacyPrepare\\(\\s*?\\\"AjaxRequest\\((?:[\\s\\S]*?)\\)->.*\\\"\\),\\s*$",
                    "params": { "prefix_length": 39, "action": "onchange", "end_char": "," }
                },
                {
                    "method": "action_legacy_prepare",
                    "regex": "(?m)'onchange'=>NApp::Ajax\\(\\)->LegacyPrepare\\(\\s*?\\\"AjaxRequest\\((?:[\\s\\S]*?)\\)->.*\\\"\\)\\]\\s*$",
                    "params": { "prefix_length": 39, "action": "onchange", "end_char": "]" }
                },
                {
                    "method": "echo_legacy_prepare",
                    "regex": "(?m)\\=\\\"<\\?php echo NApp::Ajax\\(\\)->LegacyPrepare\\(\\s*?\\\"AjaxRequest\\((?:[\\s\\S]*?)\\)->.*\\\"\\);\\s*?\\?>\\s*\\\"",
                    "params": { "prefix_length": 41 }
                }

            ]
        }
    ]
}